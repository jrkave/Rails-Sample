<%= form_with(model: [@jelly_cat, @rating]) do |form| %>
    <% if @rating.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@rating.errors.count, "error") %> prohibited this rating from being saved:</h2>
        <ul>
          <% @rating.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <%= form.label :rating %>
      <%= form.number_field :rating %>
    </div>
  
    <div class="field">
      <%= form.label :reviewer_name %>
      <%= form.text_field :reviewer_name %>
    </div>
  
    <div class="field">
      <%= form.label :review_text %>
      <%= form.text_area :review_text %>
    </div>
  
    <%= form.hidden_field :jelly_cat_id, value: @jelly_cat.id %>
  
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
  